upstream drone {
    server drone:8000;
}

# Handle connection upgrading.
map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    include /etc/nginx/ssl_listen;

    server_name build.pinshot.net;
    
    charset utf-8;

    ssl_certificate /certs/pinshot.net_chain.pem;
    ssl_certificate_key /certs/pinshot.net.key;
    include /etc/nginx/ssl_params;

    location / {
        include /etc/nginx/proxy_params;
        proxy_pass http://drone;

        proxy_http_version 1.1;
        proxy_buffering off;
        chunked_transfer_encoding off;
    }

    # Handle WebSockets by catching all /ws (case-insensitive) and upgrade the connection.
    location ~* /ws {
        include /etc/nginx/proxy_params;
        proxy_pass http://drone;

        proxy_http_version 1.1;
        proxy_read_timeout 86400;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}

