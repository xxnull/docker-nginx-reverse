# disallow empty hostnames
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;

    ssl_certificate /certs/le/pinshot.net.crt;
    ssl_certificate_key /certs/le/pinshot.net.key;
    include /etc/nginx/ssl_params;

    return 403;
}
