upstream files {
    server nginx-files:80;
}

server {
    include /etc/nginx/ssl_listen;

    server_name files.pinshot.net;
    
    charset utf-8;

    ssl_certificate /certs/pinshot.net_chain.pem;
    ssl_certificate_key /certs/pinshot.net.key;
    include /etc/nginx/ssl_params;

    location /videos/ {
        auth_basic "Registry realm";
        auth_basic_user_file /credentials/videos.htpasswd;

        include /etc/nginx/proxy_params;
        proxy_pass http://files;
    }

    location / {
        include /etc/nginx/proxy_params;
        proxy_pass http://files;
    }
}
