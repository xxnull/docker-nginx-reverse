upstream www {
    server nginx-www:80;
}

server {
    include /etc/nginx/ssl_listen;

    server_name www.pinshot.net;

    ssl_certificate /certs/pinshot.net_chain.pem;
    ssl_certificate_key /certs/pinshot.net.key;
    include /etc/nginx/ssl_params;

    return 301 $scheme://pinshot.net$request_uri;
}

server {
    include /etc/nginx/ssl_listen;

    server_name pinshot.net;

    charset utf-8;

    ssl_certificate /certs/pinshot.net_chain.pem;
    ssl_certificate_key /certs/pinshot.net.key;
    include /etc/nginx/ssl_params;

    location / {
        include /etc/nginx/proxy_params;
        proxy_pass http://www;
    }
}
